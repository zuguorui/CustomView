<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeDark" parent="Theme.AppCompat" />
    <style name="AppThemeLight" parent="Theme.AppCompat.Light" />
    <style name="AppThemeLight.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar" />
    <style name="PopHorAnim">
        <item name="android:windowEnterAnimation">@anim/poptip_scale_left_in</item>
        <item name="android:windowExitAnimation">@anim/poptip_scale_left_out</item>
    </style>
    <style name="PopVerAnim">
        <item name="android:windowEnterAnimation">@anim/poptip_scale_top_in</item>
        <item name="android:windowExitAnimation">@anim/poptip_scale_top_out</item>
    </style>
    <style name="PopAlphaAnim">
        <item name="android:windowEnterAnimation">@anim/poptip_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/poptip_alpha_out</item>
    </style>
</resources>
